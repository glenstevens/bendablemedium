<UserControl x:Class="WoW360wpf.UserControls.DebugOutput"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Grid Margin="5 5">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="25" />
            <RowDefinition Height="25" />
            <RowDefinition Height="25" />
            <RowDefinition Height="25" />
            <RowDefinition Height="25" />
            <RowDefinition MinHeight="60" />
        </Grid.RowDefinitions>
        <Label Grid.Row="0" Grid.Column="0" Content="Left Stick" />
        <Label Grid.Row="0" Grid.Column="1" Content="Right Stick" />
        <Label Grid.Row="2" Grid.Column="0" Content="Left Trigger" />
        <Label Grid.Row="2" Grid.Column="1" Content="Right Trigger" />
        <Label Grid.Row="4" Grid.Column="0" Content="Buttons" />
        <TextBlock Name="LeftStickValue" Grid.Row="1" Grid.Column="0" />
        <TextBlock Name="RightStickValue" Grid.Row="1" Grid.Column="1" />
        <TextBlock Name="LeftTriggerValue" Grid.Row="3" Grid.Column="0" />
        <TextBlock Name="RightTriggerValue" Grid.Row="3" Grid.Column="1" />
        <ListBox Name="ButtonOutputListBox" Grid.Row="5" Grid.Column="0" Grid.ColumnSpan="2" />
    </Grid>
</UserControl>
